#!/bin/bash

ROOT=$(cd $(dirname ${BASH_SOURCE[0]}) && pwd)
BUILD=${ROOT}/build
DIST=${ROOT}/dist
MODULE=${ROOT}/module

[ -d ${BUILD} ] && rm -fr ${BUILD}
mkdir -p ${BUILD}

cp -R ${ROOT}/nginx/* ${BUILD}

if [ -d ${MODULE}/html/ ]; then
  pushd ${MODULE}/html/
  for FILE in $(ls); do
    [ -f ${BUILD}/docs/html/${FILE} ] && rm ${BUILD}/docs/html/${FILE}
    ln -s ${MODULE}/html/${FILE} ${BUILD}/docs/html/${FILE}
  done
  popd
fi

[ -f ${BUILD}/conf/nginx.conf ] && rm ${BUILD}/conf/nginx.conf
ln -s ${MODULE}/nginx.conf ${BUILD}/conf/nginx.conf

pushd ${BUILD}
./auto/configure \
  --prefix=${DIST} \
  --conf-path=conf/nginx.conf \
  --error-log-path=logs/error.log \
  --http-log-path=logs/access.log \
  --with-http_ssl_module \
  --add-module=${MODULE}/src
popd

#make
#make install
